{
  "name": "vanillaJS-library-boilerplate",
  "version": "0.0.1",
  "description": "A simple boilerplate for creating a JavaScript library that is framework agnostic",
  "main": "dist/Main.min.js",
  "repository": "",
  "author": "Hall, James",
  "scripts": {
    "build": "webpack  --config webpack.prod.js",
    "watch": "webpack --watch --mode=development",
    "start": "webpack-dev-server --port 8031 --open --config webpack.dev.js",
    "test": "jest",
    "lint": "eslint *.js src/*.js src/*/*.js ",
    "precommit": "yarn build && yarn lint && yarn test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prepush": "yarn lint && yarn test"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "regenerator-runtime": "^0.11.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
